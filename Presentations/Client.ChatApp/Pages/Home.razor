@page "/"
@using Client.ChatApp.Pages.Features
@inherits HomeViewHandler

<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            <PageTitle>Home</PageTitle>
            <div class="users_container">
                <Pagination Title="کاربران جدید">
                    <div class="users">
                        @foreach(var user in Users) {
                            <div class="user center " @onclick="()=> OnChatItemSelected(user.BasicInfo)">
                                <div class="status @(user.IsOnline ? "online" : "" )"></div>
                                <div class="logo center">
                                    <div class="img center">Img</div>
                                </div>
                                <div class="name">@user.BasicInfo.DisplayName</div>
                            </div>
                        }
                    </div>
                </Pagination>
            </div>
        </Authorized>
    </AuthorizeView>
</CascadingAuthenticationState>